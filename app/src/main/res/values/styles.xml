<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_style_main" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/title_text</item>
        <item name="android:layout_margin">@dimen/margin_title</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <style name="title_style_edit" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/card</item>
        <item name="android:layout_margin">@dimen/margin_title</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size_edit</item>
    </style>
    <style name="card_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_text_size_item</item>
        <item name="android:textColor">@color/card_item_color</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="card_item_style.Title">
        <item name="android:textColor">@color/title_card_color</item>
    </style>
    <style name="card_item_style.edit_item">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/card_text_size_item_edit</item>
    </style>
    <style name="card_item_style.edit_item.title">
        <item name="android:textColor">@color/title_card_color</item>
    </style>

    <style name="card_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_card_view</item>
        <item name="android:layout_marginRight">@dimen/margin_card_view</item>
        <item name="android:backgroundTint">@color/back_card_view</item>
        <item name="cardCornerRadius">@dimen/radius_card_view</item>
    </style>
    <style name="card_style.theme2" >
        <item name="android:backgroundTint">@color/ThemeCustom2colorOnPrimary</item>
    </style>
    <style name="edit_text_card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/card_item_color</item>
        <item name="android:textSize">@dimen/card_text_size_item_edit</item>
        <item name="android:ems">10</item>
    </style>
    <style name="edit_text_card.multiline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">top|start</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">5</item>
    </style>
    <style name="edit_text_card.Title">
        <item name="android:textColor">@color/title_card_color</item>
    </style>
    <style name="btn_save_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_save_edit</item>
        <item name="android:layout_margin">@dimen/margin_btn_save</item>
        <item name="android:text">@string/btn_sava</item>
        <item name="cornerRadius">@dimen/radius_card_view</item>
    </style>
    <style name="btn_save_edit.setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_save_edit</item>
        <item name="android:layout_margin">@dimen/margin_btn_save</item>
        <item name="android:text">@string/btn_sava</item>
        <item name="android:layout_gravity">right</item>
        <item name="cornerRadius">@dimen/radius_card_view</item>
    </style>
    <style name="btn_save_edit_land">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_save_edit</item>
        <item name="android:layout_marginStart">@dimen/margin_btn_save</item>
        <item name="android:layout_marginEnd">@dimen/margin_btn_save</item>
        <item name="android:text">@string/btn_sava</item>
        <item name="cornerRadius">@dimen/radius_card_view</item>
    </style>

    <style name="toolbar_main_style" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="toolbar_main_style_theme2" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="MyTextInputV1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="myCustomMenuTextAppearanceTheme2" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/ThemeCustom2colorPrimaryVariant</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="DrawerIconStyleTheme2" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#9263D3</item>
    </style>

</resources>