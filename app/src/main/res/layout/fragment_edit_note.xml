<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView style="@style/title_style_edit" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            style="?attr/cardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Название заметки"
                    android:textColorHint="@color/title_card_color"
                    app:hintTextColor="@color/title_card_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_country"
                        style="@style/edit_text_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/back_card_view" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/title_card_color"
                    app:hintTextColor="@color/title_card_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_capital"
                        style="@style/edit_text_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/back_card_view"
                        android:hint="Дата"
                        android:inputType="date"
                        android:maxLength="8"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Описание"
                    android:textColorHint="@color/title_card_color"
                    app:hintTextColor="@color/title_card_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_population"
                        style="@style/edit_text_card.multiline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/back_card_view" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_edit_note"
                style="@style/btn_save_edit" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>