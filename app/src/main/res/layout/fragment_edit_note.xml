<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            style="@style/title_style_edit"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            style="@style/card_style"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:hint="Название заметки"
                    android:textColorHint="@color/title_card_color"
                    app:hintTextColor="@color/title_card_color"
                    android:layout_height="wrap_content"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/edit_country"
                        style="@style/edit_text_card"
                        android:backgroundTint="@color/back_card_view"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="@color/title_card_color"
                    app:hintTextColor="@color/title_card_color"
                    android:layout_height="wrap_content"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        style="@style/edit_text_card"
                        android:id="@+id/edit_capital"
                        android:maxLength="8"
                        android:textSize="18sp"
                        android:inputType="date"
                        android:backgroundTint="@color/back_card_view"
                        android:layout_height="wrap_content"
                        android:hint="Дата" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="@color/title_card_color"
                    app:hintTextColor="@color/title_card_color"
                    android:hint="Описание"
                    android:layout_height="wrap_content"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/edit_population"
                        style="@style/edit_text_card.multiline"
                        android:backgroundTint="@color/back_card_view"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_edit_note"
                style="@style/btn_save_edit"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_edit_note"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    style="@style/btn_save_edit"
                    android:text="@string/btn_add"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_edit_note"
                    android:layout_width="wrap_content"
                    style="@style/btn_save_edit"
                    android:layout_weight="1"
                    android:text="@string/btn_delete"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>